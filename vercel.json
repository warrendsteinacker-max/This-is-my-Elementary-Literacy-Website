{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "vite-project/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "api/server.js" 
    },
    { 
      "source": "/(.*)", 
      "destination": "vite-project/dist/index.html" 
    }
  ]
}